<h1>Editing {{course.title}}</h1>

<form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field">
        <input  id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Courses Name</label>
        <span class="helper-text" data-error="Enter your name"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price of courses</label>
        <span class="helper-text" data-error="Enter your price"></span>
    </div>

    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL images</label>
        <span class="helper-text" data-error="Enter the URL of your picture"></span>
    </div>
    
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Editing this course</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course.id}}">
    <button class="btn delete" style="margin-top: 10px;">Remove course</button>
</form>